{% extends "base.njk" %}

{% block titulo %}PhysioCare | New Record{% endblock %}

{% block contenido %}
    <div class="container mt-5">
        <h1 class="text-center my-4 display-4 text-primary">Create New Medical Record</h1>

        <form action="/records" method="POST">
            <div class="mb-3">
                <label for="patient" class="form-label">Patient</label>
                <select id="patient" name="patient" class="form-select" required>
                    <option value="">Select a patient</option>
                    {% for patient in patients %}
                        <option value="{{ patient._id }}">{{ patient.name }} {{ patient.surname }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="mb-3">
                <label for="medicalRecord" class="form-label">Medical Record</label>
                <textarea id="medicalRecord" name="medicalRecord" class="form-control" required></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Save Record</button>
        </form>

        {% if error %}
            <div class="alert alert-danger mt-3">
                {{ error }}
            </div>
        {% endif %}
    </div>
{% endblock %}
