{% extends "base.njk" %}
{% block titulo %}Libros | Listado{% endblock %}
{% block contenido %}
    <div class="container">
        <h1 class="text-center mb-4">Listado de Libros</h1>
        <div class="list-group">
            {% for libro in libros %}
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">{{ libro.titulo }}</h5>
                        <p class="mb-1">Autor: {{ libro.autor }} | Editorial: {{ libro.editorial }}</p>
                    </div>
                    <div class="btn-group" role="group" aria-label="Acciones">
                        <a href="/libros/{{ libro.id }}" class="btn btn-info btn-sm mr-2">Ficha</a>
                        <form action="/libros/{{ libro.id }}" method="post" style="display:inline;">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger btn-sm">Borrar</button>
                        </form>
                        <form action="/libros/editar/{{ libro.id }}" method="get" style="display:inline;">
                            <button type="submit" class="btn btn-primary btn-sm">Editar</button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
